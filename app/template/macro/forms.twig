{% macro MD_input(label, type , name, value , errorMsg = false  ) %}
    <input placeholder="" type="{{ type }}" name="{{ name }}" id="{{ name }}" class="validate" value="{{ value }}">
    <label for="{{ name }}" {% if errorMsg %}data-error="{{ errorMsg }}"{% endif %} >{{ label }}</label>
{% endmacro %}

{% macro MD_button_1(jshookname,label,type) %}
    <button data-jshook="{{ jshookname }}" class="btn waves-effect waves-light orange lighten-1" type="{{ type | default('button')}}">{{ label |default('missing label')}}</button>
{% endmacro %}

{% macro MD_button_2(jshookname,label,type , iconText) %}
    <button data-jshook="{{ jshookname }}" class="btn waves-effect waves-light blue lighten-1" type="{{ type | default('button')}}">{{ label |default('missing label')}}<i class="material-icons right">{{ iconText }}</i>
    </button>
{% endmacro %}

{% macro MD_select_year(label, name ) %}
    {% set y = "now"|date("Y") %}
    <label for="{{ name }}">{{ label }}</label>
    <select name="{{ name }}" id="{{ name }}" class="browser-default">
        {% for i in 1920..y %}
            <option value="{{ i }}">{{ i }}</option>
        {% endfor %}
    </select>
{% endmacro %}

