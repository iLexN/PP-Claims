{% extends "template/base.html.twig" %}

{% import "macro/forms.twig" as forms %}

{% block bodyHTML %}
    <div class="wrap">

        <div class="row">
            <div class="col s12">Logo</div>
        </div>

        <div class="row">
            <div class="col s12 m7 l6 offset-m5 offset-l5">
                <div class="row">
                    <div class="col s12">
                        <h5>{{ langText.home_headling | nl2br }}</h5>
                    </div>
                    <div class="col s12 m12 l6">
                        <div class="row">    
                            <form data-jshook="loginForm"  action="" method="POST">
                                <div class="input-field col s12">
                                    {{ forms.MD_input(langText.username,'text','user_name') }}
                                </div>
                                <div class="input-field col s12" >
                                    {{ forms.MD_input(langText.passowrd,'password','password') }}
                                </div>
                                <div data-jshook="loginMsg" class="col s12 m12 l12 hide login_form_msg" >
                                </div>
                                <div class="col s6 m12 l12" >
                                    {{ forms.MD_button_1('loginBtn',langText.loginBtn,'button') }}
                                </div>
                            </form>
                            <div class="input-field col s6 m12 l12">
                                {{ langText.home_help_link }}
                            </div>
                        </div>
                    </div>
                    <div class="col s12 m12 l6">
                        <div class="home_verify_div">
                            <div class="home_verify_msg valign-wrapper">
                                <div class="valign home_verify_msg_text">{{ langText.home_verify_msg }}</div>
                            </div>
                            <div>{{ components.a_link_style1(langText.home_verify_btn,'#v') }}</div>
                        </div>
                    </div>
                </div>
            </div>   
        </div>
    </div>
    


    <div class="home_footer_space"></div>
    <div class="home_footer_div">
        <div class="row wrap">
            <div class="col s12 m8 l6 offset-m4 offset-l5">
                <p>{{ langText.footer_copyright }}<br/>{{ langText.footer_address }}<br/>{{ langText.footer_licensed }}</p>
            </div>
        </div>
    </div>

{% endblock %}



{% block jsBottom %}
    <script>
        csrf.setNameKey('{{ token.name }}');
        csrf.setValueKey('{{ token.value }}');

        $.jshook('loginBtn').on({
            'click.login': loginForm.submit
        });
    </script>
{% endblock %}
