{% extends "template/center_1_col.twig" %}

{% block mainHTML %}
    <main>
        <div class="row">
            <div class="col s12 m10 l8 offset-m1 offset-l2">
                <div class="row">
                    {% if is_mobile() %}
                    <div class="col s12"><p style="color:#555">{{ langText.main_desc_m }}</p></div>
                    {% else %}
                    <div class="col s12"><p style="color:#555">{{ langText.main_desc }}</p></div>
                    {% endif %}
                    <div class="col s12 m6 l6">
                        {{ components.main_block_effect(langText.title_profile,langText.desc_profile , 'assets/images/icon_profile.png' ,path_for('Member.index')) }}
                    </div>
                    <div class="col s12 m6 l6">
                        {{ components.main_block_effect(langText.title_claims,langText.desc_claims , 'assets/images/icon_claims.png' , path_for('Claim.Index') ) }}
                    </div>
                    <div class="col s12 m6 l6">
                        {{ components.main_block_effect(langText.title_policy,langText.desc_policy, 'assets/images/icon_policy.png', path_for('Policy') ) }}
                    </div>
                    <div class="col s12 m6 l6">
                        {{ components.main_block_effect(langText.title_contact,langText.desc_contact,'assets/images/icon_contact.png',path_for('ContactUs')) }}
                    </div>
                </div>
                <div>
                    <div class="col s12">                        
                        {{ components.responsiveImg( '/assets/images/banner_apps.jpg' , '/assets/images/banner_apps_m.jpg' ) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block jsBottom %}
    {{ parent() }}
    <script>
        activeNav('main');
        // this will increase the api server loading
        $.get({
            url : "/ajax/preload",
            global : false
        });
        </script>
{% endblock %}
