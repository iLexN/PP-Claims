{% extends "template/general.twig" %}
{% import "macro/forms.twig" as forms %}
{% block mainHTML %}
    <div class="row">
        <div class="col s12 m8 l8 offset-m2 offset-l2">
            <h1 class="general_h1">Set new Password</h1>
            <div class="general_sub">
                Hi , {{ User.user_name }}
            </div>
        </div>
    </div>
    <form class="form-style-2" data-jshook="setforgotPasswordForm">
    <div class="row">
        <div class="col s12 m8 l6 offset-m2 offset-l2 errors_msg" data-jshook="setForgotPasswordMsg">
            
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m8 l6 offset-m2 offset-l2">
            {{ forms.MD_input(langText.new_password,'password','forgot_new_password') }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m8 l6 offset-m2 offset-l2">
            {{ forms.MD_input(langText.confirm_password,'password','forgot_new_password2') }}
        </div>
    </div>
    <div class="row">
        <div class="col s12 m8 l6 offset-m2 offset-l2 center-align" style="margin-top:1.2rem">
            {{ forms.MD_button_2('setforgotpasswordBtn formBtn',langText.submitBtn,'button' , 'send') }}
        </div>
    </div>
    <input type="hidden" name="token" value="{{ forgotToken }}">
    </form>
{% endblock %}

{% block jsBottom %}
    {{ parent() }}
    {% include 'include/components/csrf.twig' %}
{% endblock %}
