{% extends "template/general_left_right_col.twig" %}
{% import "macro/forms.twig" as forms %}

{% block leftHTML %}
    <h1>{{ langText.member_password_title }}</h1>

    <div class="pending_box" style="padding:0.5rem;margin-bottom:1rem">
        <div class="pending_box_icon" style="padding:0 0.5rem"><img src="/assets/images/icon_password.svg"></div>
        <div class="padding_box_desc">{{ langText.member_password_dess }}</div>            
    </div>

    <div class="form-style-2">
        
        <div class="row hide">
            <div class="col s12 errors_msg" id="msg"></div>
        </div>
        
        <div class="row" style="margin-bottom:0">
            <div class="input-field col s12 m6 l6">
                <input placeholder="" id="old_password" type="password" class="validate" v-model="old_password">
                <label data-error="Required" for="old_password">{{ langText.old_password }} *</label>
            </div>
        </div>
        <div class="row" style="margin-bottom:0">
            <div class="input-field col s12 m6 l6">
                <input placeholder="" id="new_password" type="password" class="validate" v-model="new_password">
                <label data-error="Required" for="new_password">{{ langText.new_password }} *</label>
            </div>
        </div>
        <div class="row" style="margin-bottom:0">
            <div class="input-field col s12 m6 l6">
                <input placeholder="" id="confirm_password" type="password" class="validate" v-model="confirm_password">
                <label data-error="Required" for="confirm_password">{{ langText.confirm_password }} *</label>
            </div>
        </div>
            <div class="row" style="margin-bottom:0">
            <div class="input-field col s12 m6 l6">
                <button class="{{ css.btn_2 }}" type="button" v-on:click="save">{{ langText.saveBtn }}</button>
            </div>
            </div>
    </div>
{% endblock %}

{% block rightHTML %}
    <div class="col s12">
        <div data-jshook="pushpin">
            <div class="tipsBox">
                <div class="tipsbox_title"><i class="material-icons icon_color_5 icon_size_22">stars</i> {{ langText.member_password_tip_title }}</div>
                <div class="tipsbox_info">
                    <div class="left tipsbox_iconbox"><i class="material-icons icon_color_6 icon_size_16">stars</i></div>
                    <div class="tipsbox_textbox min-text">{{ langText.member_password_tip_p1 }}</div>
                    <div class="left tipsbox_iconbox"><i class="material-icons icon_color_6 icon_size_16">stars</i></div>
                    <div class="tipsbox_textbox min-text">{{ langText.member_password_tip_p2 }}</div>
                    <div class="left tipsbox_iconbox"><i class="material-icons icon_color_6 icon_size_16">stars</i></div>
                    <div class="tipsbox_textbox min-text">{{ langText.member_password_tip_p3 }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block afterFooterHTML %}
    {% include 'include/components/password-updated.twig' %}
{% endblock %}

{% block jsBottom %}
    {{ parent() }}
    <script>
        var sysText = {{ sysText | json_encode() | raw }};
    </script>
    <script src="{{ base_url() }}/assets/js/page/change-password.js?{{ appVersion }}"></script>
    <script>
        activeNav('profile');
        {% if not is_mobile() %}
            pinTop.init();
        {% endif %}
    </script>
    {% include 'include/components/csrf.twig' %}
{% endblock %}
